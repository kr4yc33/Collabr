<form action="/projects/posts/edit/<%= values.id %>" method="POST">
    <div class="col-12">
        <label>post title</label>
        <input type="text" name="posttitle" value="<%= values.title %>">
    </div>
    <div class="col-12">
        <label>description</label>
        <input type="textarea" name="postdescription" value="<%= values.content %>">    
    </div>
    <button type="submit" class="btn btn-primary">post</button>
</form>    